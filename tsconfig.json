{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "~components/*": [
        "src/components/*"
      ],
      "~composables/*": [
        "src/composables/*"
      ],
      "~layouts/*": [
        "src/layouts/*"
      ],
      "~pages/*": [
        "src/pages/*"
      ],
      "~store/*": [
        "src/store/*"
      ],
      "~style/*": [
        "src/style/*"
      ],
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "shims.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}